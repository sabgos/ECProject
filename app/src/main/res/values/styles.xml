<resources>
    <!-- Base application theme.
    <style name="" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:windowBackground">@drawable/ic_launcher_background</item>
    </style>  -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@drawable/background_logos</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Welcome" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@drawable/background_white_welcome</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- The splash theme. to set the background with your splash screen drawable -->
    <style name="AppTheme.Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/holo_blue_light</item>
    </style>


    <style parent="TextAppearance.MaterialComponents.Chip" name="chipTextAppearance">
      <item name="android:textSize">16sp</item>
    <!--<item name="android:fontFamily">monospace</item>-->
      <item name="android:textStyle">bold</item>
    </style>

    <style parent="chipTextAppearance" name="chipTextAppearanceSmall">
      <item name="android:textSize">15sp</item>
    </style>
</resources>